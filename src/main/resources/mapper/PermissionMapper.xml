<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.demo.mapper.PermissionMapper">

    <!--查询所有权限信息-->
    <select id="findAll" resultType="Permission">
        SELECT
        id,
        pid,
        name,
        url,
        ismenu,
        deep,
        code,
        status
        FROM
        permission
    </select>

    <!--查询父菜单-->
    <select id="parentMenu" resultType="Permission">
        SELECT
        id,
        pid,
        name,
        url,
        ismenu,
        deep,
        code
        FROM
        permission
    </select>

    <!--查询子菜单ID-->
    <select id="childMenu" resultType="Permission" parameterType="int">
        SELECT
        id,
        pid,
        name,
        url,
        ismenu,
        deep,
        code
        FROM
        permission
        WHERE pid = #{pid}
    </select>
    <!--根据用户名查找权限-->
    <select id="findUserPermissions" parameterType="string" resultType="Permission">
        SELECT
        p.id,
        p.code
        FROM
        role AS r
        LEFT JOIN user_role AS ur
        ON
        r.id = ur.role_id
        LEFT JOIN USER AS u
        ON
        u.id = ur.user_id
        LEFT JOIN role_permission rp ON
        rp.role_id = r.id
        LEFT JOIN permission AS p
        ON
        p.id = rp.permission_id
        WHERE
        u.username = #{username}
    </select>

    <!--新增权限-->
    <insert id="addPermission" parameterType="Permission">
        INSERT INTO permission (pid,name,url,ismenu,code,status)
        VALUES(
        #{pid},
        #{name},
        #{url},
        #{ismenu},
        #{code},
        #{status}
        )
    </insert>

    <!--切换菜单-->
    <update id="updateIsmenu" parameterType="Permission">
        UPDATE
        permission
        SET
        ismenu = #{ismenu}
        WHERE
        id = #{id}
    </update>


</mapper>